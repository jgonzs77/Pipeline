pipeline {
    agent {label 'master' }
    stages {
        stage('Paso 1') {
            steps {
                git 'https://github.com/efsavage/hello-world-war'
                echo 'Git Hello World'
                withMaven(maven: 'Maven Test') {
                   sh 'mvn package'
                }
                echo 'Maven Hello World'
                fileOperations([fileCopyOperation(excludes: '', flattenFiles: false, includes: '/target/*.war ', targetLocation: '/var/lib/tomcat8/webapps/')])


            }
        }
    }
    post {
        always {
            echo 'Siempre'
        }
        success {
            echo 'Exito'
        }
        failure {
            echo 'Fallo'
        }
        changed {
            echo 'Cambio'
        }
    }
}


